<% if @books.empty? %>
  <h1>Nothing to Review</h1>
<% end %>

<table>
  <tr>
    <th>Book</th>
    <th>Filenames</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book, book %></td>
      <td><ul class='actionlist'>
        <% book.possible_filenames.each do |f| %>
          <li>
            <span><%= link_to f, f %></span>
            <%= form_with model: Link.new() do |form| %>
              <%= form.hidden_field :book_id, value: book.id %>
              <%= form.hidden_field :filename_id, value: f.id %>
              <%= form.submit :Link %>
            <% end %>
          </li>
        <% end %>
      </ul></td>
    </tr>
  <% end %>
</ul>