<p id="notice"><%= notice %></p>

<p>
  <strong>IRC Link:</strong>
  <%= @share.irc_link %>
</p>

<p>
  <strong>Server:</strong>
  <%= link_to @share.server.name, @share.server %>
</p>

<p>
  <strong>Directory:</strong>
  <%= link_to @share.directory.name, @share.directory %>
</p>

<p>
  <strong>Filename:</strong>
  <%= link_to @share.data.name, @share.data %>
</p>

<p>
  <strong title='Interplanetary Filesystem'>IPFS:</strong>
  <% if @share.ipfs_id %>
    <%= link_to(
      '✔️',
      "http://ipfs.io/ipfs/#{@share.ipfs_id}"
    ) %>
  <% else %>
    <span>❌</span>
  <% end %>
</p>

<%= link_to 'Edit', edit_share_path(@share) %> |
<%= link_to 'Back', shares_path %>
